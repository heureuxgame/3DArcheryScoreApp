<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- larger circle at the back -->
    <item android:height="64dp" android:width="128dp" android:gravity="center">
        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/Black"/>

            <!-- thicker outer boarder -->

        </shape>
    </item>


    <!-- inner circle -->
    <item android:height="60dp" android:width="60dp" android:gravity="center">
        <shape
            android:shape="oval"  >
            <solid
                android:color="@color/Blue"/>

            <stroke
                android:width="1dp"
                android:color="#000000"/>

        </shape>
    </item>
</layer-list>