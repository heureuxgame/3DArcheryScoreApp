<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundGravity="center_horizontal">

    <LinearLayout
        android:id="@+id/linearLayoutArcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewArcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:text="@string/archer_name"
                android:textAppearance="@style/headingTextViewStyle"
                android:textColor="@color/Orange" />

            <TextView
                android:id="@+id/textViewArcherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="6dp"
                android:gravity="center_horizontal"
                android:textAppearance="@style/ArcherNameTextViewStyle"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewlastTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="6dp"
            android:text="TextView"
            android:textColor="@color/Orange"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewTarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="6dp"
                android:text="@string/target"
                android:textAppearance="@style/headingTextViewStyle"
                android:textColor="@color/Orange" />

            <Spinner
                android:id="@+id/spinnerTarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:prompt="@string/target" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewTScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="6dp"
            android:text="@string/select_score"
            android:textAppearance="@style/headingTextViewStyle"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/spinnerScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_margin="8dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="0"
            android:padding="8dp"
            android:minEms="2"
            android:textSize="26sp"
            android:textStyle="bold"
            android:background="@drawable/circle"
            android:textColor="@color/White" />

        <!--
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
           -->

        <Button
            android:id="@+id/buttonSaveScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:text="@string/save_score"
            android:textSize="22sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewFiller"
            android:layout_width="0dp"
            android:layout_height="64dp"

            android:gravity="center_horizontal"

            android:layout_gravity="center_horizontal"
            android:text=" " />
    </LinearLayout>
</ScrollView>